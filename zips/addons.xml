<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.tgg" name="[COLOR teal][B]TGG[/B][/COLOR]Wizard" version="2.0.1" provider-name="unknownTGG">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR teal][B]TGG[/B][/COLOR]Wizard</summary>
        <description lang="en">A fork of [COLOR limegreen][B]Open[/B][/COLOR]Wizard. [COLOR teal][B]TGG[/B][/COLOR]Wizard offers a lot of maintenance features, selective add-on data saving, and home to the TGG build.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.tgg" name="[COLOR teal]TGG Repository[/COLOR]" version="2.0" provider-name="unknownTGG">
    <extension point="xbmc.addon.repository" name="TGG Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/unknownTGG/unknowntgg.github.io/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/unknownTGG/unknowntgg.github.io/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/unknownTGG/unknowntgg.github.io/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>[COLOR teal]TGG Repository[/COLOR]</summary>
        <description>The official TGG Repository.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
